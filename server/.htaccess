# Deny access to .env files
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

# Deny access to composer files
<Files "composer.json">
    Order allow,deny
    Deny from all
</Files>

<Files "composer.lock">
    Order allow,deny
    Deny from all
</Files>

# Deny access to vendor directory (if not already protected)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^vendor/ - [F,L]
</IfModule>