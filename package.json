{
  "name": "electra-website",
  "version": "1.0.0",
  "description": "Electra Website with live reload server",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "dev:vite": "vite",
    "server": "cd server && php -S localhost:4243",
    "build": "vite build && cp -r server dist/",
    "preview": "vite preview"
  },
  "dependencies": {
    "connect-livereload": "^0.6.1",
    "express": "^4.18.3",
    "livereload": "^0.9.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "vite": "^7.1.4"
  }
}
